<Window x:Class="Practice__2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice__2"
        mc:Ignorable="d"
        Title="Practice №2" Height="163.333" Width="552.5" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="92" Margin="10,21,0,0" VerticalAlignment="Top" Width="290"/>
        <Button Content="Find" HorizontalAlignment="Left" Margin="328,84,0,0" VerticalAlignment="Top" Width="146" Height="29" Click="Calculation_Click"/>
        <TextBox x:Name="multiplication" HorizontalAlignment="Left" Height="23" Margin="328,56,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="146"/>
        <Grid>
            <Menu VerticalAlignment="Top">
                <MenuItem Header="File">
                    <MenuItem Header="Заполнить массив" Click="FillArray_Click"/>
                    <MenuItem Header="Очистить массив" Click="ClearArray_Click"/>
                    <MenuItem Header="Сохранить массив" Click="SaveArray_Click"/>
                    <MenuItem Header="Открыть массив" Click="OpenArray_Click"/>
                    <Separator/>
                    <MenuItem Header="О программе" Click="Information_Click"/>
                    <MenuItem Header="Выход" Click="Exit_Click"/>
                </MenuItem>
            </Menu>
            <Label Content="Multiplication:" HorizontalAlignment="Left" Margin="327,23,0,0" VerticalAlignment="Top" Width="107"/>
        </Grid>
    </Grid>

</Window>
